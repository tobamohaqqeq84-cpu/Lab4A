#include <iostream>
#include <vector>
#include <iomanip>
#include <cstdlib>
#include <ctime>

using namespace std;

struct Color {
    int red;
    int green;
    int blue;
};

int main() {
    // Set up random number generator
    srand(time(0));

    // a vector for holding Color structs
    vector<Color> colors;

    // it Generates a random number between 25 and 50
    int n = rand() % 26 + 25;

    // Fill the vector with n random colors
    for (int i = 0; i < n; ++i) {
        Color temp;
        temp.red = rand() % 256;    
        temp.green = rand() % 256;  
        temp.blue = rand() % 256;   
        colors.push_back(temp);
    }

    // Prints the header
    cout << left << setw(10) << "Color#"
         << setw(10) << "R value"
         << setw(10) << "G value"
         << setw(10) << "B value" << endl;

    cout << "------------------------------------------" << endl;

    // Output the vector contents
    for (size_t i = 0; i < colors.size(); ++i) {
        cout << left << setw(10) << i + 1
             << setw(10) << colors[i].red
             << setw(10) << colors[i].green
             << setw(10) << colors[i].blue << endl;
    }

    return 0;
}
